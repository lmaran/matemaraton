<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/">Cursuri</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/{{course._id}}">{{course.code}}</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}">
                Cap.{{inc course.selectedChapter.index}}</a></li>
        <li class="breadcrumb-item active">L.{{inc course.selectedLesson.index}}</li>
        <li title="Vizualizează" class="ms-auto"><a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/{{course.selectedLesson.id}}"><i class="bi bi-eye me-1"></i></a></li>
    </ol>
</nav>

<h1>{{#if isEditMode}}Lecția {{inc course.selectedLesson.index}}: {{course.selectedLesson.name}}{{else}}Lecție
    nouă{{/if}}</h1>

<form method="post" novalidate onsubmit="saveBtn.disabled = true; return true;">

    <div class="row">
        <div class="col-md-12">
            <label for="nameInput" class="fw-bold">Nume:</label>
            <input type="text" name="name" class="form-control" id="nameInput" placeholder=""
                value="{{course.selectedLesson.name}}">
            <small>
                <p class="text-muted mb-0">Ex: Numere raționale</p>
            </small>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <label for="descriptionInput" class="fw-bold">Descriere:</label>
            <textarea type="text" name="description" class="form-control" id="descriptionInput"
                placeholder="">{{course.selectedLesson.description}}</textarea>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="positionSelect" class="fw-bold">Poziția:</label>
            <select name="position" class="form-control" id="positionSelect">
                {{#select selectedPosition}}
                {{#each positionOptions}}
                <option value="{{index}}">{{name}}</option>
                {{/each}}
                {{/select}}
            </select>
            <small>
                <p class="text-muted mb-0">Poziția în cadrul listei</p>
            </small>
        </div>
    </div>

    {{!-- <label class="fw-bold">Vizibilitate:</label> --}}

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="isHiddenCheck" name="isHidden" {{#if
            course.selectedLesson.isHidden}}checked{{/if}}>
        <label class="form-check-label" for="isHiddenCheck">Ascunde</label>
        <small>
            <p class="text-muted mb-0">Doar tu (proprietarul) poți vedea resursele ascunse</p>
        </small>
    </div>

    <input type="hidden" name="id" value="{{course._id}}" />

    <div class="mt-4">
        <div class="col-md-7s offset-md-3s">
            <button type="submit" name="saveBtn" class="btn btn-primary"><i class="bi bi-save"></i>
                Salveaza</button>

            {{#if isEditMode}}
            <a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/{{course.selectedLesson.id}}"
                class="btn btn-light"><i class="bi bi-eye"></i>
                Vizualizează</a>
            <button type="submit"
                formaction="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/{{course.selectedLesson.id}}/sterge"
                name="deleteBtn" class="btn btn-link"
                onclick="return confirm('Ești sigur că vrei să ștergi această lecție?');"><i
                    class="bi bi-trash-fill"></i>
                Șterge</button>
            {{/if}}
        </div>
    </div>

</form>

<hr class="mt-5 mb-5">

<h4 class="mt-3">1. Noțiuni teoretice</h4>

{{#if course.selectedLesson.articles}}

{{#each course.selectedLesson.articles}}

<div id="content-preview-div"
    style="border: 1px solid #cbcccc; padding: 6px 12px; background-color2: #fff9f8; min-height:58px">
    {{{content.textPreview}}}
</div>

<span class="float-end"><a href="/cursuri/{{@root.course._id}}/capitole/{{@root.course.selectedChapter.id}}/lectii/{{@root.course.selectedLesson.id}}/teorie/{{id}}/modifica" target2="_blank" >Modifică</a>
                <small><i class="bi bi-box-arrow-up-right" aria-hidden="true"></i></small></span>

<a
    href="/cursuri/{{@root.course._id}}/capitole/{{@root.course.selectedChapter.id}}/lectii/{{@root.course.selectedLesson.id}}/articole/{{id}}/modifica">
    Adaugă noțiuni teoretice</a>
<br>

{{/each}}

{{else}}
<a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/{{course.selectedLesson.id}}/articole/adauga"
    class="btn btn-primary btn-sm">
    <i class="bi bi-plus-lg"></i> Adaugă noțiuni teoretice</a>
<hr />
{{/if}}


<h4 class="mt-3">2. Exerciții rezolvate</h4>
<a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/adauga-exercițiu-rezolvat"
    class="btn btn-primary btn-sm">
    <i class="bi bi-plus-lg"></i> Adaugă exercițiu rezolvat</a>

<hr />
