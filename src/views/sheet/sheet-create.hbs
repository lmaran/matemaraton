    <div class="mt-4">
        <div class="col-md-7s offset-md-3s">
            <button type="submit" name="saveBtn" class="btn btn-primary"><i class="bi bi-save"></i>
                Salveaza</button>
        </div>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        <i class="bi bi-info-circle me-2"></i>
