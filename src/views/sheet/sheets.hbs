<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item active">Fișe</li>

        {{#if canCreateOrEditCourse}}
        <li title="Editează" class="ms-auto"><a href="/fise/modifica"><i class="bi bi-pencil me-1"></i></a></li>
        {{/if}}
    </ol>
