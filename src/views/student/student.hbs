<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/clase">Clase</a></li>
        {{#if lastClass}}
        <li class="breadcrumb-item"><a href="/clase/{{lastClass._id}}">{{lastClass.name}}</a></li>
        {{/if}}
        <li class="breadcrumb-item active">{{student.shortName}}</li>
    </ol>
</nav>


{{!-- <h1>Prezența</h1> --}}
<h1>{{student.shortName}}</h1>
<h2 class="mb-5">{{class.name}}</h2>

{{#each sortedClasses}}
<h5>{{editionInterval}}:</h5>
<ul>
    <li>Clasa: <a href="/clase/{{_id}}">{{name}}</a> <span class="text-muted font-weight-light">(nivel
            avansat)</span>
    </li>

    <li><a href="/clase/{{_id}}/elevi/{{@root.student._id}}/prezenta">Prezența</a></li>
    <li><a href="/clase/{{_id}}/elevi/{{@root.student._id}}/teme-predate">Teme predate</a> <span class="text-muted"> (făcute
                acasă)</span></li>
</ul>
{{/each}}

{{#if can.viewParentsLink}}
<h5>Părinți/tutori:</h5>
<ul>
    {{#each parents}}
    <li><a href="/parinti/{{_id}}">{{lastName}} {{firstName}}</a></li>
    {{/each}}
</ul>
{{/if}}



