<style>

</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {{!-- <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li> --}}
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/teste">Teste</a></li>
        <li class="breadcrumb-item active">
            {{#if isEditMode}}{{practiceTest.name}}{{else}}Adaugă{{/if}}
        </li>
    </ol>
</nav>

<h1 id="practice-test-id-container" data-practice-test-id="{{practiceTest._id}}">
    {{#if isEditMode}} Edit: {{practiceTest.name}}{{else}} Test nou:{{/if}}
</h1>

<form method="post" novalidate onsubmit="saveBtn.disabled = true; return true;">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="gradeSelect" class="font-weight-bold">Clasa:</label>
            <select name="grade" class="form-control" id="gradeSelect">
                {{#select practiceTest.grade}}
                <option value=""></option>
                {{#each gradeAvailableOptions}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}

                {{/select}}
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="scopeSelect" class="font-weight-bold">Scop:
                {{!-- <span class="text-muted">(de unde a fost copiat ex.)</span>:--}}</label>
            <select name="scope" class="form-control" id="scopeSelect">
                {{#select practiceTest.scope}}
                <option value=""></option>
                {{#each scopeAvailableOptions}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
                {{/select}}
            </select>
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="titleInput" class="required font-weight-bold">Titlu:</label>
            <input type="text" name="name" class="form-control" id="titleInput" placeholder=""
                value="{{practiceTest.name}}">
        </div>
    </div>

    <input type="hidden" name="_id" value="{{practiceTest._id}}" />

    <div class="form-group">
        <div class="col-md-7s offset-md-3s">
            <button type="submit" name="saveBtn" class="btn btn-primary"><i class="fas fa-save"></i>
                Salveaza</button>
            <a href="/teste" class="btn btn-light"><i class="fa fa-times"></i> Renunță</a>

        </div>

    </div>

</form>

