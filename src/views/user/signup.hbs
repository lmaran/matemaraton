<div class="container-fluid">

    {{!-- <p>{{toJSON data}}</p> --}}
    {{!-- <p>{{toJSON errors}}</p> --}}

    {{!-- <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <i class="fa fa-check mr-2"></i> <strong>Success!</strong> Account Activated Successfully !!
