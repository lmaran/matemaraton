<div class="container-fluid">

    <h1>Schimbă parola</h1>

    {{!-- <p>{{toJSON errors}}</p> --}}
    {{!-- <p>{{toJSON data}}</p> --}}

    <form method="post" action="changepassword" novalidate onsubmit="saveBtn.disabled = true; return true;">
        <div class="form-group row">
            <label for="oldPassword" class="col-md-3 col-form-label required">Parola veche</label>
            <div class="col-md-7">
                <input type="password" name="oldPassword" id="oldPassword"
                    class="form-control {{#if data.oldPassword.msg}}is-invalid {{/if}}"
                    {{#if data.oldPassword.hasAutofocus}}autofocus {{/if}} />
                <div class="invalid-feedback">{{data.oldPassword.msg}}</div>
            </div>
        </div>

        <div class="form-group row">
            <label for="newPassword" class="col-md-3 col-form-label required">Parola nouă</label>
            <div class="col-md-7">
                <input type="password" name="newPassword" id="newPassword"
                    class="form-control {{#if data.newPassword.msg}}is-invalid {{/if}}"
                    {{#if data.newPassword.hasAutofocus}}autofocus {{/if}} />
                <p class="text-muted mb-0">Minim 6 caractere.</p>
                <div class="invalid-feedback">{{data.newPassword.msg}}</div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-7 offset-md-3">
                <button type="submit" name="saveBtn" class="btn btn-primary"><i class="fas fa-save"></i>
                    Salvează</button>
                <button type="button" class="btn btn-light" onclick='window.history.back();'>
                    <i class="fas fa-times"></i>
                    Renunță</button>
            </div>
        </div>

    </form>

    <div class="form-group row">
        <div class="col-md-7 offset-md-3">
            Ți-ai uitat parola? <a href="/resetpassword">Reseteazăă parola.</a>
        </div>
    </div>

</div>