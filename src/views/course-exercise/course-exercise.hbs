        <button type="button" class="btn btn-sm btn-light btn-outline-primary" title="Tipărește" onclick="window.print()">
            <i class="bi bi-printer"></i>
        </button>

        <a title="Json" class="btn btn-sm btn-light btn-outline-primary" 
