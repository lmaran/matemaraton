{{!-- Exercise type --}}

<div class="mt-3">
    <span class="fw-bold mt-2">Id:</span>
    <span>{{exercise._id}}</span>
</div>

<div class="mt-3 mb-3">
    <span class="fw-bold">Tipul exercițiului:</span>
    <span>{{exercise.exerciseType.text}}</span>
</div>

<div class="mt-3 mb-3">
    <div><span class="fw-bold">Enunț:</span></div>
    <div style="border: 1px solid #bb815d; padding: 6px 12px; background-color: #fff9f8; min-height:58px" class2="mt-2">
        {{{exercise.question.statement.textPreview}}}
        {{#if exercise.question.answerOptions}}
        <div class="row">
            {{#each exercise.question.answerOptions}}
            <div class="col text-nowrap">{{{textPreview}}}</div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</div>
