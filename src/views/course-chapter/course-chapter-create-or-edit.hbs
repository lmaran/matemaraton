<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/modifica">Cursuri</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/{{course._id}}/modifica">{{course.code}}</a></li>
        <li class="breadcrumb-item active">Cap.{{inc course.selectedChapter.index}}</li>
        <li title="Vizualizează" class="ms-auto"><a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}"><i class="bi bi-eye me-1"></i></a></li>
    </ol>
</nav>

<h1>{{#if isEditMode}}Cap.{{inc course.selectedChapter.index}}: {{course.selectedChapter.name}}{{else}}Capitol
    nou{{/if}}</h1>

<form method="post" novalidate onsubmit="saveBtn.disabled = true; return true;">

    <div class="row">
        <div class="col-md-12">
            <label for="nameInput" class="fw-bold">Nume:</label>
            <input type="text" name="name" class="form-control" id="nameInput" placeholder=""
                value="{{course.selectedChapter.name}}">
            <small>
                <p class="text-muted mb-0">Ex: Numere raționale</p>
            </small>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <label for="descriptionInput" class="fw-bold">Descriere:</label>
            <textarea type="text" name="description" class="form-control" id="descriptionInput"
                placeholder="">{{course.selectedChapter.description}}</textarea>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="positionSelect" class="fw-bold">Poziție:</label>
            <select name="position" class="form-select" id="positionSelect">
                {{#select selectedPosition}}
                {{#each availablePositions}}
                <option value="{{index}}">{{name}}</option>
                {{/each}}
                {{/select}}
            </select>
            <small>
                <p class="text-muted mb-0">Poziția în cadrul listei</p>
            </small>
        </div>
    </div>

    {{!-- <label class="fw-bold">Vizibilitate:</label> --}}

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="isHiddenCheck" name="isHidden" {{#if
            course.selectedChapter.isHidden}}checked{{/if}}>
        <label class="form-check-label" for="isHiddenCheck">Ascunde</label>
        <small>
            <p class="text-muted mb-0">Doar tu (proprietarul) poți vedea resursele ascunse</p>
        </small>
    </div>

    <input type="hidden" name="id" value="{{course._id}}" />

    <div class="mt-4">
        <div class="col-md-7s offset-md-3s">
            <button type="submit" name="saveBtn" class="btn btn-primary"><i class="bi bi-save"></i>
                Salveaza</button>

            {{#if isEditMode}}
            {{!-- <a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}" class="btn btn-light"><i
                    class="bi bi-eye"></i>
                Vizualizează</a> --}}
            <button type="submit" formaction="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/sterge"
                name="deleteBtn" class="btn btn-link"
                onclick="return confirm('Ești sigur că vrei să ștergi acest capitol?');"><i
                    class="bi bi-trash-fill"></i>
                Șterge</button>
            {{/if}}
        </div>
    </div>

</form>

<hr class="mt-5 mb-5">

<h4 class="mt-3">Lecții</h4>
<ol id="table-of-contents" class="pl-0">
    {{#each course.selectedChapter.lessons}}
    <li>
        <a href="/cursuri/{{@root.course._id}}/capitole/{{@root.course.selectedChapter.id}}/lectii/{{id}}/modifica">{{name}}{{#unless name}}Fără nume{{/unless}}</a>
        {{#if isHidden}}
        <a href="/cursuri/{{@root.course._id}}/capitole/{{@root.course.selectedChapter.id}}/lectii/{{id}}/modifica">
            <i class="bi bi-eye-slash text-danger"></i></a>
        {{/if}}
    </li>
    {{/each}}
</ol>

<a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/adauga" class="btn btn-primary btn-sm">
    <i class="bi bi-plus-lg"></i> Adaugă lecție</a>