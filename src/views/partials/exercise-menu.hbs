{{!-- Exercise menu --}}
<div class="exercise-menu-div hide-on-print clearfix">
    <div class="float-start">
        {{#if question.answer.textPreview}}
            <a class="toggle-answer-btn" href="">Răspuns</a>
        {{/if}}

        {{#if question.hints}}
            {{#if question.answer.textPreview}}
                <span class="text-muted ms-2 me-2">|</span>
            {{/if}}
            <a class="toggle-hints-btn" href="">Indicații</a>
            <span class="text-muted">({{question.hints.length}})</span>
        {{/if}}

        {{#if question.solution.textPreview}}
            {{#if (or question.answer.textPreview question.hints)}}
                <span class="text-muted ms-2 me-2">|</span>
            {{/if}}
            <a class="toggle-solution-btn" href="">Soluție</a>
        {{/if}}
    </div>

    <div class="float-end">
        {{#if allowView}}
        <a title="Vizualizează exercițiul" 
            href="/cursuri/{{@root.courseId}}/capitole/{{@root.chapterId}}/lectii/{{@root.lessonId}}/sectiuni/{{sectionId}}/niveluri/{{levelId}}/exercitii/{{_id}}">
            <i class="bi bi-eye me-1"></i></a>
        {{/if}}

        {{#if allowEdit}}
        <a title="Editează exercițiul" 
            href="/cursuri/{{@root.courseId}}/capitole/{{@root.chapterId}}/lectii/{{@root.lessonId}}/sectiuni/{{sectionId}}/niveluri/{{levelId}}/exercitii/{{_id}}/modifica">
            <i class="bi bi-pencil me-1"></i></a>
        {{/if}}

        {{#if allowDelete}}
        <button title="Șterge exercițiul" type="submit"
            formaction="/cursuri/{{@root.courseId}}/capitole/{{@root.chapterId}}/lectii/{{@root.lessonId}}/exercitii/{{_id}}/sterge"
            name="deleteBtn" class="btn btn-link p-0 border-0 me-1 align-top"
            onclick="return confirm('Ești sigur că vrei să ștergi acest exercițiu?');"><i class="bi bi-trash"></i></button>
        {{/if}}

        {{#if allowMove}}
        <a title="Mută exercițiul" 
            href="/cursuri/{{@root.courseId}}/capitole/{{@root.chapterId}}/lectii/{{@root.lessonId}}/sectiuni/{{sectionId}}/niveluri/{{levelId}}/exercitii/{{_id}}/muta">
            <i class="bi bi-arrows-move me-1"></i></a>
        {{/if}}
    </div>
</div>