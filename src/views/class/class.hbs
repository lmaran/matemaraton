{{#unless (eq class.enrollmentInfo.status "open")}}
<h5 class="mt-4">Rapoarte:</h5>
<ul>
    <li><a href="/clase/{{class._id}}/elevi">Elevi</a></li>
    <li class="mb-3"><a href="/clase/{{class._id}}/sesiuni-curs">Sesiuni de curs</a>
        <span class="text-muted">(poze de pe tablă
            {{#if (or (eq2 class._id "5d92db9ba0da913a67b9a711") (eq2 class._id "5d92dc63a0da913a67b9a713"))}}
            <span class="fw-bold">și video</span>
            {{/if}})
        </span>
    </li>

    <li><a href="/clase/{{class._id}}/prezenta">Prezența</a> <span class="text-muted">(pe zile)</span></li>
    <li class="mb-3"><a href="/clase/{{class._id}}/total-prezente">Total prezențe</a><span class="text-muted"> (pe
            elevi)</span></li>

    <li><a href="/clase/{{class._id}}/teme-propuse">Teme propuse</a> <span class="text-muted"> (pentru acasă)</span>
    </li>
    <li><a href="/clase/{{class._id}}/total-teme-predate">Total teme predate</a> <span class="text-muted"> (făcute
            acasă)</span> </li>
    {{#if can.viewParentsLink}}
    <li><a href="/clase/{{class._id}}/parinti">Parinți</a></li>
    {{/if}}

</ul>
{{/unless}}

{{#if class.description}}
<h5>Descriere:</h5>
<div class="text-muted font-weight-light mb-3">{{{class.description}}}</div>
{{/if}}

{{#if @root.user.isAdmin}}
{{#if class.courseCode}}
<h5>Curs: <a href="/cursuri/{{courseSummary._id}}">{{courseSummary.code}}</a> - {{courseSummary.name}}</h5>
{{/if}}
{{/if}}

