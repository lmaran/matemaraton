<h1>Fișe</h1>

{{!-- <a href="/fise/adauga" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Adaugă fișă</a> --}}

<form method="post" novalidate onsubmit="saveBtn.disabled = true; return true;"></form>
<table class="table thead-light table-bordered table-hover mt-5">
    <thead>
        <tr>
            <th>Fișier</th>
            <th>Nume</th>
            <th>Dimensiune</th>
            <th>Sursa</th>
            <th>CreatDe</th>
            <th>CreatLa (UTC)</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each files}}
        <tr>
            <td>
                <img src="{{url}}" height="50"/>
            </td>
            <td>{{name}}</td>
            <td>{{size}}</td>
            <td>
                {{#if sourceId}}
                    <a href="{{sourceType}}/{{sourceId}}">Sursa</a>
                {{else}}
                    {{!-- {{sourceType}} --}}
                {{/if}}
            </td>
            <td>{{createdBy.name}}</td>
            <td>{{createdOn}}</td>
            {{!-- <td>
                <button type="button" class="btn btn-link delete-file-btn" data-url="{{url}}">Șterge</button>
            </td> --}}
            <td>
                <a href="/fisiere/{{_id}}">Detalii</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>