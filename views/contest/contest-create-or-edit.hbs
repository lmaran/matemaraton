<style>

</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {{!-- <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li> --}}
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/concursuri">Concursuri</a></li>
        <li class="breadcrumb-item active">
            {{#if isEditMode}}{{contest.newCode}}{{else}}Adaugă{{/if}}
        </li>
    </ol>
</nav>

<h1 id="contest-id-container" data-contest-id="{{contest._id}}">
    {{#if isEditMode}}{{contest.name}}{{else}} Concurs nou:{{/if}}
</h1>

<form method="post" novalidate onsubmit="saveBtn.disabled = true; return true;">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="gradeSelect" class="font-weight-bold">Clasa:</label>
            <select name="grade" class="form-control" id="gradeSelect">
                {{#select contest.grade}}
                <option value=""></option>
                {{#each gradeAvailableOptions}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}

                {{/select}}
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="contestTypeSelect" class="font-weight-bold">Tipul concursului:</label>
            <select name="contestType" class="form-control" id="contestTypeSelect">
                {{#select contest.contestType}}
                <option value=""></option>
                {{#each contestTypeAvailableOptions}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
                {{/select}}
            </select>
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="contestNameInput" class="required font-weight-bold">Numele concursului:</label>
            <input type="text" name="name" class="form-control" id="contestNameInput" placeholder=""
                value="{{contest.name}}">
        </div>
    </div>

    <input type="hidden" name="_id" value="{{contest._id}}" />

    <div class="form-group">
        <div class="col-md-7s offset-md-3s">
            <button type="submit" name="saveBtn" class="btn btn-primary"><i class="fas fa-save"></i>
                Salveaza</button>
            <a href="/concursuri{{#if isEditMode}}/{{contest._id}}{{/if}}" class="btn btn-light"><i
                    class="fa fa-times"></i> Renunță</a>

        </div>

    </div>

</form>

