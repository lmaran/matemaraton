<h1>Cursuri</h1>

{{#each sections}}
<section>
    <div class="mt-4">
    {{#if isActive}}
        <a href="/cursuri/{{_id}}/modifica">{{name}}:</a>
    {{else}}
        <span class="h2">{{name}}:</span> 
        <a role="button" class="btn btn-primary btn-xs align-text-bottom" href="/cursuri/adauga?sectionId={{_id}}"><i class="bi bi-plus"></i>Adaugă curs</a>
        <a role="button" class="btn btn-light btn-xs align-text-bottom" href="/sectiuni/{{_id}}/modifica"><i class="bi bi-arrow-right"></i></a>
    {{/if}}
    </div>

    <div class="text-muted">{{{descriptionPreview}}}</div>
    <ul class="mt-2">
        {{#each courses}}
            <li>{{code}}: 
                {{#if isActive}}
                    <a href="/cursuri/{{_id}}/modifica">{{name}} </a>
                {{else}}
                    <span class="text-muted">{{name}}</span> 
                    <a class="pl-1 text-decoration-none" href="/cursuri/{{_id}}/modifica">...</a>
                {{/if}}
        {{/each}}
    </ul>
</section>
{{/each}}

<a href="/sectiuni/adauga" class="btn btn-primary btn-sm mb-5"><i class="bi bi-plus-lg"></i> Adaugă secțiune</a>