<style>
    .hidePresence {
        display: none;
    }

    .hideStudent {
        display: none;
    }

    .responsive {
        width: 100%;
        height: 0;
        padding-bottom: 56.25%;
        position: relative;
    }

    .responsive iframe {
        position: absolute;
        width: 100%;
        height: 100%;
    }
</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/clase">Clase</a></li>
        <li class="breadcrumb-item"><a href="/clase/{{class._id}}">{{class.name}}</a></li>
        <li class="breadcrumb-item"><a href="/clase/{{class._id}}/sesiuni-curs">Sesiuni</a></li>
        {{!-- <li class="breadcrumb-item active">Sesiunea {{courseSession.course}}</li> --}}
    </ol>
</nav>

<h1>Sesiunea {{courseSession.course}} <span class="font-weight-light text-secondary h4"> -
        {{courseSession.dateAsString}}</span>
</h1>
<h2 class="mb-5">{{class.name}}</h2>


{{!-- <h3 class="mt-5" {{#if noCourse}} class="text-muted" {{/if}}>{{courseSession.dateAsString}}</h3> --}}

{{#if canCreateOrEditCourseSession}}
<a href="/sesiuni-curs/edit/{{courseSession._id}}" class="btn btn-primary mt-2 mb-4"><i class="fa fa-edit"></i>
    Modifică</a>
{{/if}}

<div class="h4 font-weight-light">{{courseSession.description}}</div>

{{#each courseSession.videos}}
<div class="mt-2">Partea {{inc @index}}:</div>
<div class="responsive">
    <iframe width="560" height2="315" src="{{url}}" frameborder="0"
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
    </iframe>
</div>
{{/each}}

{{#if courseSession.videos}}
<p class="h4 mt-5 mb-1">Varianta scrisă:</p>
{{/if}}

{{#each courseSession.images}}
<p>{{courseSession.description}}</p>
<img src={{url}} class="img-fluid" alt="">
<a style="display: block;" href={{highQualityUrl}}>Vezi poza la calitate maximă</a>
{{/each}}
<br>
