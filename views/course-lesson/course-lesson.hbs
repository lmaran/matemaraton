<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/">Cursuri</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/{{courseId}}">{{courseCode}}</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/{{courseId}}/capitole/{{chapterId}}">
                Cap.{{inc chapterIndex}}</a></li>
        <li class="breadcrumb-item active">L.{{inc lessonIndex}}</li>
        
        {{#if canCreateOrEditCourse}}
        <li title="Json" class="ms-auto me-2"><a href="/cursuri/{{courseId}}/lectii/{{lessonId}}/json"><i class="bi bi-braces me-1"></i></a></li>
        <li title="Editează"><a href="/cursuri/{{courseId}}/lectii/{{lessonId}}/modifica"><i class="bi bi-pencil me-1"></i></a></li>
        {{/if}}
    </ol>
</nav>

<h1>Lecția {{inc lessonIndex}}: {{lesson.name}}</h1>

<div class="text-muted">
    {{lesson.description}}
</div>

{{!-- {{toJSON lesson}} --}}

{{#if lesson.theory.textPreview}}
    <section>
        <h2 class="mt-3 mb-3 border-bottom border-secondary">
            Noțiuni teoretice
            <a class="fs-6" href="/cursuri/{{courseId}}/lectii/{{lessonId}}/teorie"><i class="bi bi-eye me-1"></i></a>
        </h2>
        
        <div id="content-preview-div">
            {{{lesson.theory.textPreview}}}
        </div>
    </section>
{{/if}}


{{#each lesson.sectionsObj.sections}}
    {{#if total}}
    <div id="section{{id}}"  class="section-menu-div">
    <h2 class="mt-5 mb-4 border-bottom border-secondary">{{name}}
        <span class="fs-6 text-muted fw-normal">
            {{#if (eq total 1)}} (1 exercițiu):
            {{else}} ({{total}} exerciții):
            {{/if}} 
        </span>

        {{#if total}}
            <a class="toggle-section-btn h6 fw-normal" href="#">{{#if isActive}}Ascunde exercițiile{{else}}Afișează{{/if}}</a>
        {{/if}}
    </h2>
    </div>

    <div class="section-content-div mb-3 {{#unless isActive}}d-none2{{/unless}}">
    {{#each levels}}
        {{#if exercises.length}}
        <div id="section{{../id}}-level{{id}}"  class="level-menu-div">
            <div>
                <h3 class="fs-4 text-muted2 fw-light2">{{name}}
                    <span class2="text-muted fw-light">
                        {{!-- {{#if (eq exercises.length 1)}} (1 exercițiu):
                        {{else}} ({{exercises.length}} exerciții):
                        {{/if}}  --}}
                        {{!-- ({{exercises.length}}): --}}
                    </span>
                </h3>
            </div>

            {{!-- {{#if exercises.length}}
                <a class="toggle-level-btn me-2" href="#">{{#if isActive}}Ascunde exercițiile{{else}}Afișează{{/if}}</a>
            {{/if}} --}}
        </div>

        <div class="level-content-div mb-3 {{#unless isActive}}d-none2{{/unless}}">
            {{#each exercises}}
            <div class="exercise-div">
                {{> exercise-statement @this}}
                {{> exercise-menu @this sectionId = ../../id levelId = ../id allowView=true allowEdit=false allowDelete=false allowMove=false}}
                {{> exercise-panels @this }}
            </div>
            {{/each}}
        </div>
        {{/if}}
    {{/each}}
    </div>
    {{/if}} 
{{/each}}


<div class="mt-5 mb-5"></div>


{{#section 'script'}}
<script type="module" src="/js/eventBinders/course-lesson.event-binder.js"></script>
{{/section}}