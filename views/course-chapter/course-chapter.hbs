<style>
    OL {
        counter-reset: item;
    }

    LI {
        display: block;
    }

    #agenda LI:before {
        /* only <li>s in agenda section */
        content: counters(item, ".") ". ";
        counter-increment: item
    }

    #table-of-contents LI:before {
        /* only <li>s in agenda section */
        content: counters(item, ".") ". ";
        counter-increment: item
    }
</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/">Cursuri</a></li>
        <li class="breadcrumb-item"><a href="/cursuri/{{course._id}}">{{course.code}}</a></li>
    </ol>
</nav>

<h1>Cap.{{inc course.selectedChapter.index}}: {{course.selectedChapter.name}}
    {{#if canCreateOrEditCourse}}
    <a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/modifica">
        <i class="fas fa-pencil-alt" style="font-size: 50%"></i>
    </a>
    {{/if}}
</h1>

<div class="text-muted">
    {{course.selectedChapter.description}}
</div>

<h4 class="mt-3">Lecții</h4>
<ol id="table-of-contents" class="pl-0">
    {{#each course.selectedChapter.lessons}}
    <li>
        <a href="/cursuri/{{@root.course._id}}/capitole/{{@root.course.selectedChapter.id}}/lectii/{{id}}">{{name}}</a>
        {{#if isHidden}}
        <a href="/cursuri/{{@root.course._id}}/capitole/{{@root.course.selectedChapter.id}}/lectii/{{id}}/modifica">
            <i class="fas fa-eye-slash text-danger"></i></a>
        {{/if}}
    </li>
    {{/each}}
</ol>

<a href="/cursuri/{{course._id}}/capitole/{{course.selectedChapter.id}}/lectii/adauga" class="btn btn-primary btn-sm">
    <i class="fa fa-plus"></i> Adaugă lecție</a>