<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {{!-- <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li> --}}
        <li class="breadcrumb-item"><a href="/">Acasă</a></li>
        <li class="breadcrumb-item"><a href="/clase/{{class._id}}">Clasa:
                {{class.grade}}-{{class.name}}</a></li>
        <li class="breadcrumb-item"><a href="/elevi/{{student._id}}">{{student.shortName}}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Prezența</li>
    </ol>
</nav>


<h1>Prezența</h1>
<h2>{{student.shortName}} ({{student.gradeAndLetter}})</h2>
<h3 class="mb-5">Clasa a {{class.grade}}-a, {{class.name}}</h3>

<ul class="pl-4">
    {{#each presencesPerStudent}}
    <li class="mb-1">
        <span style="display:inline-block; width:100px">{{dateAsString}}</span>


        {{#if isPresent}}
        <span class="font-weight-bold">prezent</span>,
        {{else}}
        <span class="font-weight-bold text-danger">absent</span>,
        {{/if}}

        <span> <a href="/cursuri/{{courseId}}">Curs
                {{courseNumber}}</a>{{#if isCreditFromOtherClass}}</span>
        ({{className}}{{#if isTemporaryCreditFromOtherCourse}} - temporar{{/if}}){{/if}}{{#if description}}:
        <span class="text-muted"> {{description}}</span>
        {{/if}}

    </li>
    {{/each}}
</ul>

<hr />
<p class="mb-5">
    <span class="font-weight-bold">Total prezențe:</span> {{totalPresences}} din {{totalCourses}}
    ({{totalPresencesAsPercent}}%)
</p>