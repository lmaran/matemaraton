<h1>Secțiuni</h1>

<a href="/sectiuni/adauga" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Adaugă secțiune</a>

<form method="post" novalidate onsubmit="saveBtn.disabled = true; return true;"></form>
<table class="table thead-light table-bordered table-hover mt-5">
    <thead>
        <tr>
            <th>Code</th>
            <th>Nume</th>
            <th>CreatLa (UTC)</th>
        </tr>
    </thead>
    <tbody>
        {{#each sections}}
        <tr>
            <td>{{code}}</td>
            <td>
                <a href="/sectiuni/{{_id}}/modifica">{{name}}{{#unless name}}Fără nume{{/unless}}
            </td>
            <td>{{createdOn}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>